<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="fwachs" id="1">
        <createTable tableName="MOVIE">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="synopsis" type="TEXT"/>
            <column name="director" type="VARCHAR(255)"/>
            <column name="release_date" type="date">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="fwachs" id="2">
        <createTable tableName="ACTOR">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="fwachs" id="3">
        <createTable tableName="MOVIE_ACTOR">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="movies_id" type="BIGINT"/>
            <column name="actors_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>